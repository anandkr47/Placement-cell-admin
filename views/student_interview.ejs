<style>
  h2 {
    color: #333;
    font-size: 24px;
    margin-bottom: 10px;
  }

  .interview-list {
    list-style: none;
    padding: 0;
  }

  .interview-item {
    background-color: #f9f9f9;
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 5px;
  }

  .interview-details {
    font-size: 16px;
  }

  .join-interview-btn {
    background-color: #007bff;
    color: #fff;
    padding: 5px 10px;
    border-radius: 3px;
    text-decoration: none;
    display: inline-block;
    margin-top: 5px;
  }
</style>

<h2>Assigned Interviews</h2>
<% if (student.interviews.length > 0) { %>
  <ul class="interview-list">
    <% student.interviews.forEach((interview) => { %>
      <% if (interview.company && interview.date && interview.result) { %>
        <li class="interview-item">
          <div class="interview-details">
            <strong>Company:</strong> <%= interview.company %><br>
            <strong>Date:</strong> <%= interview.date %><br>
            <strong>Time:</strong> <%= interview.time %><br>
            <strong>Link:</strong> <%= interview.link %><br>
            <strong>Result:</strong> <%= interview.result %><br>
            <a href="<%= interview.link %>" class="join-interview-btn">Join Interview</a>
          </div>
        </li>
      <% } %>
    <% }); %>
  </ul>
<% } else { %>
  <p>No interviews assigned yet.</p>
<% } %>
