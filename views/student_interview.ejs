<style>
  .interviews-container {
    max-width: 600px;
    margin: 20px auto;
  }
h2{
  text-align: center;
  color: #007bff;
}
  .interview-card {
    background-color: #f9f9f9;
    border-radius: 5px;
    padding: 20px;
    margin-bottom: 20px;
  }

  .interview-company {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .interview-details {
    font-size: 16px;
    color: #333;
    margin-bottom: 10px;
  }

  .join-interview-btn {
    background-color: #007bff;
    color: #fff;
    padding: 8px 15px;
    border-radius: 3px;
    text-decoration: none;
    display: inline-block;
    margin-top: 10px;
  }
</style>

<div class="interviews-container">
  <h2>Assigned Interviews</h2>

  <% if (student.interviews.length > 0) { %>
    <% student.interviews.forEach((interview) => { %>
      <% if (interview.company && interview.date && interview.result) { %>
        <div class="interview-card">
          <div class="interview-company"><%= interview.company %></div>
          <div class="interview-details">
            <strong>Date:</strong> <%= interview.date %><br>
            <strong>Time:</strong> <%= interview.time %><br>
            <strong>Result:</strong> <%= interview.result %><br>
          </div>
          <a href="<%= interview.link %>" class="join-interview-btn">Join Interview</a>
        </div>
      <% } %>
    <% }); %>
  <% } else { %>
    <p>No interviews assigned yet.</p>
  <% } %>
</div>
